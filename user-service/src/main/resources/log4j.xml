<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">

    <Properties>
        <Property name="log-path">C:/Users/Yadigar/Desktop/snap/log</Property>
        <Property name="project-name">user-service</Property>
        <Property name="log-pattern">%d{ISO8601} %-5p [Sample][%t|%c{1}] %L %M %m\n</Property>
        <Property name="rollover-strategy-max">10</Property>
        <Property name="rolling-size-based">2 kb</Property>
    </Properties>

    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>${log-pattern}</pattern>
            </PatternLayout>
        </Console>

        <RollingFile name="DEBUG" fileName="${log-path}/${project-name}-debug.log"
                     filePattern="${log-path}/${project-name}-debug-%d-%i.log.zip">
            <PatternLayout>
                <pattern>${log-pattern}</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="${rolling-size-based}"/>
            </Policies>
            <DefaultRolloverStrategy max="${rollover-strategy-max}"/>
        </RollingFile>

        <RollingFile name="ERROR" fileName="${log-path}/${project-name}-error.log"
                     filePattern="${log-path}/${project-name}-error-%d-%i.log.zip">
            <PatternLayout>
                <pattern>${log-pattern}</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="${rolling-size-based}"/>
            </Policies>
            <DefaultRolloverStrategy max="${rollover-strategy-max}"/>
        </RollingFile>

        <RollingFile name="INFO" fileName="${log-path}/${project-name}-info.log"
                     filePattern="${log-path}/${project-name}-info-%d-%i.log.zip">
            <PatternLayout>
                <pattern>${log-pattern}</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="${rolling-size-based}"/>
            </Policies>
            <DefaultRolloverStrategy max="${rollover-strategy-max}"/>
            <Filters>
                <!-- Now deny warn, error and fatal messages -->
                <ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="fatal" onMatch="DENY" onMismatch="NEUTRAL"/>

                <!-- This filter accepts info, warn, error, fatal and denies debug/trace -->
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>
    </appenders>


    <Loggers>
        <logger name="com.edu.bhos.snap.userservice" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ERROR" level="error"/>
            <AppenderRef ref="DEBUG" level="debug"/>
            <AppenderRef ref="INFO" level="info"/>
        </logger>
    </Loggers>
</configuration>